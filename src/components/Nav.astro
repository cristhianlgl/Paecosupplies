---
import LinkNav from "./LinkNav.astro";

import products from "../data/products.json";
const links = [...new Set(products.map((product) => product.category))];
links.unshift('ABOUT');
links.push('CONTACT'); 


---
<nav class="bg-ocean-blue-500 fixed w-full z-20 top-0 left-0 shadow-lg">
    <div class="bg-red-500 w-[90%] max-w-screen-xl flex flex-wrap items-center justify-between mx-auto py-2 md:grid md:grid-cols-[80%_auto] md:gap-y-2">
    <a  href="/" class="flex items-center z-20">
        <img src="/logow.svg" class="h-9 mr-3" alt="PAEcoSupplies Logo">
        <span class="self-center text-2xl z-20 text-white font-semibold whitespace-nowrap">P&A Eco Supplies</span>
    </a>
    <div class="">
      <a class="hover:underline" href="">Es</a> / <a class="hover:underline" href="">Eu</a>
    </div>
    <input class="peer hidden" type="checkbox" id="menu">
    <label class="bg-hamburger-icon w-6 h-5 bg-cover bg-center cursor-pointer peer-checked:bg-close-icon transition-all z-50 md:hidden" for="menu"></label>
    
    <div class="bg-green-700 md:bg-yellow-400 lg:bg-cyan-600 fixed inset-0 bg-gradient-to-b from-gray-500/70 to-black/70 text-center translate-x-full peer-checked:translate-x-0 transition-transform md:static md:bg-none md:translate-x-0 md:col-span-2">
      <ul class="absolute inset-x-0 top-20 p-6 w-[90%] mx-auto bg-ocean-blue-500 grid gap-3 font-bold text-very-pale-green rounded-md shadow-2xl md:items-center md:static md:flex md:flex-row md:justify-between md:m-0 md:text-xs md:p-0 md:bg-transparent lg:text-sm">
        {
          links.map((link) => <LinkNav name={link}/> )
        } 
      </ul>
  </div>

    </div>
  </nav>